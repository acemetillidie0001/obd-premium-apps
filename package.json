{
  "name": "cursor-app-build",
  "version": "0.1.1",
  "private": true,
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "predev": "powershell -ExecutionPolicy Bypass -File scripts/predev.ps1",
    "dev": "next dev",
    "dev:reset": "powershell -ExecutionPolicy Bypass -File scripts/dev-reset.ps1",
    "fix:turbopack": "powershell -ExecutionPolicy Bypass -File scripts/fix-turbopack-corruption.ps1",
    "build": "next build",
    "vercel-build": "next build",
    "start": "next start",
    "lint": "eslint src/app/api/social-auto-poster src/app/apps/social-auto-poster src/lib/apps/social-auto-poster src/lib/premium.ts src/lib/auth.ts src/app/api/auth/[...nextauth] --ext .ts,.tsx,.js,.jsx --no-error-on-unmatched-pattern",
    "lint:full": "eslint src --ext .ts,.tsx,.js,.jsx --no-error-on-unmatched-pattern",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "postinstall": "prisma generate || echo 'Warning: prisma generate failed (DATABASE_URL may be missing). This is OK for local dev without DB connection.'",
    "migrate:deploy": "tsx scripts/validate-db-url.ts && prisma migrate deploy && prisma generate",
    "verify:db": "tsx scripts/verify-db.ts",
    "check:deploy": "tsx scripts/check-deployment-status.ts",
    "db:generate": "prisma generate",
    "db:deploy": "prisma migrate deploy",
    "db:status": "prisma migrate status",
    "db:studio": "prisma studio",
    "db:exec": "prisma db execute --file",
    "crm:db:fix": "powershell -ExecutionPolicy Bypass -File scripts/obd-crm-db-fix.ps1"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.2.0",
    "@vercel/blob": "^2.0.0",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "google-auth-library": "^10.5.0",
    "install": "^0.13.0",
    "jose": "^6.1.3",
    "lucide-react": "^0.561.0",
    "next": "^16.0.10",
    "next-auth": "^5.0.0-beta.30",
    "nodemailer": "^7.0.11",
    "open": "^11.0.0",
    "openai": "^6.10.0",
    "pdf-lib": "^1.17.1",
    "pg": "^8.16.3",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "resend": "^6.6.0",
    "server-only": "^0.0.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^4.0.16",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.8",
    "prisma": "^7.2.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "typescript-eslint": "8.50.1",
    "vitest": "^4.0.16"
  }
}
